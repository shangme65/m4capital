# Database
DATABASE_URL="postgresql://username:password@localhost:5432/m4capital"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Origin Admin (Super Admin)
# This admin is automatically created during database seeding
# Required for initial admin access - CHANGE THESE IN PRODUCTION
ORIGIN_ADMIN_EMAIL="admin@yourdomain.com"
ORIGIN_ADMIN_PASSWORD="change-this-password-immediately"
ORIGIN_ADMIN_NAME="Super Admin"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Facebook OAuth
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_SECRET_TOKEN="your-webhook-secret-token"  # Random string for webhook validation

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# CoinMarketCap API (Optional - for additional crypto price data)
# Get your free API key at https://pro.coinmarketcap.com/signup
COINMARKETCAP_API_KEY="your-coinmarketcap-api-key"

# NOWPayments API (Crypto Payment Gateway)
# Get your API key at https://nowpayments.io/
NOWPAYMENTS_API_KEY="your-nowpayments-api-key"
NOWPAYMENTS_IPN_SECRET="your-ipn-secret-key"
NOWPAYMENTS_SANDBOX="false"  # Set to true for sandbox testing

# Email Configuration (SMTP)
# For Gmail: Use app-specific password (https://myaccount.google.com/apppasswords)
# For other providers: Check their SMTP settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"  # true for port 465, false for other ports
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM_NAME="M4 Capital"
EMAIL_FROM_ADDRESS="noreply@m4capital.com"  # Or use SMTP_USER

# Cron Job Authentication
# Random secret for securing cron endpoints (e.g., confirmation processing)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET="your-cron-secret-here"

# Forex Exchange Rate API
# Get your free API key at https://www.exchangerate-api.com/
# Free tier: 1,500 requests/month
FOREX_API_KEY="your-exchangerate-api-key"

