generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                     String            @id @default(cuid())
  name                   String?
  email                  String?           @unique
  emailVerified          DateTime?
  image                  String?
  password               String?
  role                   UserRole          @default(USER)
  accountType            AccountType       @default(INVESTOR)
  country                String?
  isEmailVerified        Boolean           @default(false)
  isDeleted              Boolean           @default(false)
  isOriginAdmin          Boolean           @default(false)
  emailNotifications     Boolean           @default(true)
  tradingNotifications   Boolean           @default(true)
  securityNotifications  Boolean           @default(true)
  kycNotifications       Boolean           @default(true)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  accounts               Account[]
  portfolio              Portfolio?
  paperPortfolio         PaperPortfolio?
  sessions               Session[]
  kycVerification        KycVerification?
  deposits               Deposit[]
  withdrawals            Withdrawal[]
  trades                 Trade[]
  paperTrades            PaperTrade[]
  strategies             Strategy[]
  strategyComments       StrategyComment[]
  strategyLikes          StrategyLike[]
  courseProgress         CourseProgress[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model KycVerification {
  id                String        @id @default(cuid())
  userId            String        @unique
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Personal Information
  firstName         String
  lastName          String
  dateOfBirth       String
  nationality       String
  phoneNumber       String
  
  // Address Information
  address           String
  city              String
  postalCode        String
  country           String
  
  // Document URLs
  idDocumentUrl     String
  proofOfAddressUrl String
  selfieUrl         String
  
  // Verification Status
  status            KycStatus     @default(PENDING)
  reviewedBy        String?
  reviewedAt        DateTime?
  rejectionReason   String?
  
  // Timestamps
  submittedAt       DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

enum KycStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
}

model Portfolio {
  id          String       @id @default(cuid())
  userId      String       @unique
  balance     Decimal      @default(0.00)
  assets      Json         @default("[]")
  deposits    Deposit[]
  user        User         @relation(fields: [userId], references: [id])
  withdrawals Withdrawal[]
}

model Deposit {
  id              String    @id @default(cuid())
  portfolioId     String
  userId          String?
  amount          Decimal
  currency        String
  status          String    @default("PENDING")
  method          String?   // NOWPAYMENTS_BTC, BANK_TRANSFER, etc.
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  metadata        Json?     @default("{}")
  transactionId   String?
  type            String?
  
  // NOWPayments fields
  paymentId       String?   @unique // NOWPayments payment_id
  paymentAddress  String?   // Bitcoin address to send to
  paymentAmount   Decimal?  // Amount in BTC
  paymentStatus   String?   // NOWPayments status (waiting, confirming, confirmed, etc.)
  cryptoAmount    Decimal?  // Estimated crypto amount
  cryptoCurrency  String?   // BTC, ETH, etc.
  invoiceUrl      String?   // NOWPayments invoice URL (for invoice API method)
  
  portfolio       Portfolio @relation(fields: [portfolioId], references: [id])
  user            User?     @relation(fields: [userId], references: [id])
}

model Withdrawal {
  id            String    @id @default(cuid())
  portfolioId   String
  userId        String?
  amount        Decimal
  currency      String
  status        String    @default("PENDING")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  metadata      Json?     @default("{}")
  transactionId String?
  type          String?
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id])
  user          User?     @relation(fields: [userId], references: [id])
}

model Trade {
  id            String      @id @default(cuid())
  userId        String
  symbol        String      // Trading pair (e.g., BTC/USD, ETH/USD)
  side          TradeType   // BUY or SELL
  entryPrice    Decimal     // Entry price
  exitPrice     Decimal?    // Exit price (null if still open)
  quantity      Decimal     // Quantity traded
  profit        Decimal     @default(0.00) // Profit or loss from the trade
  commission    Decimal     @default(0.00) // Trading commission
  leverage      Int         @default(1) // Leverage multiplier
  status        TradeStatus @default(OPEN)
  openedAt      DateTime    @default(now())
  closedAt      DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  metadata      Json?       @default("{}")
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum TradeType {
  BUY
  SELL
}

enum TradeStatus {
  OPEN
  CLOSED
  CANCELLED
}

// Paper Trading Portfolio for practice trading
model PaperPortfolio {
  id          String       @id @default(cuid())
  userId      String       @unique
  balance     Decimal      @default(100000.00) // Start with $100k virtual money
  assets      Json         @default("[]")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades      PaperTrade[]
}

// Paper Trades for practice
model PaperTrade {
  id               String           @id @default(cuid())
  userId           String
  paperPortfolioId String
  symbol           String           // Trading pair
  side             TradeType        // BUY or SELL
  entryPrice       Decimal          // Entry price
  exitPrice        Decimal?         // Exit price (null if still open)
  quantity         Decimal          // Quantity traded
  profit           Decimal          @default(0.00)
  commission       Decimal          @default(0.00)
  leverage         Int              @default(1)
  status           TradeStatus      @default(OPEN)
  openedAt         DateTime         @default(now())
  closedAt         DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  metadata         Json?            @default("{}")
  
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  paperPortfolio   PaperPortfolio   @relation(fields: [paperPortfolioId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([paperPortfolioId])
  @@index([createdAt])
}

// Community: Strategy Sharing
model Strategy {
  id            String            @id @default(cuid())
  userId        String
  title         String
  description   String
  category      String            // e.g., "Day Trading", "Swing Trading", "Scalping"
  difficulty    String            // "Beginner", "Intermediate", "Advanced"
  content       String            @db.Text // Full strategy content
  isPremium     Boolean           @default(false)
  isPublished   Boolean           @default(true)
  viewCount     Int               @default(0)
  likeCount     Int               @default(0)
  commentCount  Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments      StrategyComment[]
  likes         StrategyLike[]

  @@index([userId])
  @@index([category])
  @@index([createdAt])
}

model StrategyComment {
  id         String   @id @default(cuid())
  strategyId String
  userId     String
  content    String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  strategy   Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([strategyId])
  @@index([userId])
}

model StrategyLike {
  id         String   @id @default(cuid())
  strategyId String
  userId     String
  createdAt  DateTime @default(now())
  
  strategy   Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([strategyId, userId])
  @@index([strategyId])
  @@index([userId])
}

// Educational Progress Tracking
model CourseProgress {
  id         String   @id @default(cuid())
  userId     String
  courseId   String   // Course identifier
  lessonId   String   // Lesson identifier
  completed  Boolean  @default(false)
  progress   Int      @default(0) // 0-100
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, lessonId])
  @@index([userId])
  @@index([courseId])
}

enum UserRole {
  USER
  ADMIN
}

enum AccountType {
  INVESTOR
  TRADER
}
